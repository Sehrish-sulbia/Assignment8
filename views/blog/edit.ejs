<%- include("../partials/header") %>
<%- include("../partials/navbar") %>


<div class="container">
    <form class="needs-validation" action="/blogs/<%= blog._id%>?_method=PATCH" method="POST" novalidate>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" value="<%= blog.title %>" name="title" required>
          <div id="emailHelp" class="form-text">Adding Articles</div>
        </div>
        <div class="mb-3">
          <label for="img" class="form-label">IMG URL</label>
          <input type="text" class="form-control" value="<%= blog.img %>" id="img"name="img" required>
        </div>

        <div class="mb-3">
            <label for="author" class="form-label">Author Name </label>
            <input type="text" class="form-control" value="<%= blog.author %>"  id="price" name="author" required>
          </div>

          <div class="mb-3">
            <label for="article" class="form-label">Article</label>
            <textarea class="form-control"  id="desc" cols="80" rows="5" name="article" required><%= blog.article%></textarea>
          </div>
       
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>

<script>
  
(function () {
  'use strict'


  const forms = document.querySelectorAll('.needs-validation')

  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>
